{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "rest/modules/*"
      ],
      "@services/*": [
        "services/*"
      ]
    },
    "lib": [
      "decorators",
      "dom",
      "es5",
      "scripts",
      "es2015.promise"
    ],
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  }
}